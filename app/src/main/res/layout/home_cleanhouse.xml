<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hình ảnh nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_tet"
        android:scaleType="centerCrop"
        android:contentDescription="Hình nền dịch vụ"
      />
    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Quay lại"
        android:onClick="onBackPressed"
        android:src="@drawable/back" /> <!-- Gọi phương thức quay lại khi nhấn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Dịch vụ Tết"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginStart="130dp"
        android:textSize="30sp"
        android:textStyle="bold" />
    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:padding="16dp"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#990401"
            android:padding="16dp"
            android:elevation="8dp"
            android:layout_margin="16dp">

            <!-- Lợi ích dịch vụ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧧 Lợi ích dịch vụ Tết:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="• Tận hưởng dịch vụ xuyên suốt dịp Tết mà không lo gián đoạn."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="• Đảm bảo có người nhận việc trong dịp cao điểm Tết."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧧 Điều khoản dịch vụ:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Khách hàng có thể đặt lịch trước cho dịp Tết."
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="• Thời gian đặt trước tối thiểu là 72h. Đối với nhu cầu đặt lịch gấp trong vòng 72h, Khách hàng vui lòng sử dụng Dịch Vụ Thường để được hỗ trợ tốt nhất."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Các công việc Tết cần phải thanh toán trước để được đảm bảo có người nhận việc"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Để đảm bảo tất cả Khách hàng đều được phục vụ tốt nhất, Cleango sẽ áp dụng các mức phí hủy trong dịp tết này.Tính từ thời điểm công việc bắt đầu, nếu Khách hàng:"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Hủy việc SỚM (trước 72h) phí hủy sẽ là 10%."
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Hủy việc GẤP (trong vòng 72h) phí hủy sẽ là 100%."
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:backgroundTint="#FF5722"
        android:elevation="4dp"
        android:onClick="bookService"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:text="Đặt dịch vụ ngay"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</FrameLayout>
