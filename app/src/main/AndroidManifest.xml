<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cleango"
        tools:targetApi="31">

        <!-- Khai báo API Key duy nhất -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <!-- MainActivity có intent-filter nên cần android:exported -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Các Activity khác không cần xuất -->
        <activity android:name=".WorkPackageActivity" android:exported="false" />
        <activity android:name=".WorkRepeatActivity" android:exported="false" />
        <activity android:name=".WorkWaitingActivity" android:exported="false" />
        <activity android:name=".MessChatActivity" android:exported="false" />
        <activity android:name=".AccountActivity" android:exported="false" />
        <activity android:name=".MessNewsActivity" android:exported="false" />
        <activity android:name=".ConfirmActivity" android:exported="false" />
        <activity android:name=".CleanHouseAct" android:exported="false" />
        <activity android:name=".CleanHouse1Act" android:exported="false" />
        <activity android:name=".HomeCleanhouseActivity" android:exported="false" />
        <activity android:name=".AccActivity" android:exported="false" />
        <activity android:name=".InforActivity" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" android:exported="false" />
        <activity android:name=".SelectLocationActivity" android:exported="false" />
    </application>
</manifest>
